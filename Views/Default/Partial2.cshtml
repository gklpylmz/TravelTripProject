@using TravelTripProject.Models.Siniflar
@model List<Blog>
<div class="padding1">
    <h4>En İyi Seyehatlerimiz</h4>
    <div class="box-left">
        @foreach (var item in Model)
        {
            <div class="bot-img">
                <img src="@item.blogImage" style="width:120px;height:70px;" alt="" />
            </div>
            <div class="bot-desc">
                <p>@item.blogAciklama.Substring(0,70)</p>
            </div>
            <div class="clear"></div>
        }
    </div>
    @Html.Action("Partial3","Default")
</div>
